<?xml version="1.0"?>
<config>
    <tabs>
        <magehit translate="label" module="isfeatured">
            <label>MAGE HIT</label>
            <sort_order>0</sort_order>
        </magehit>
    </tabs>
    <sections>
        <isfeatured translate="label" module="isfeatured">
            <tab>magehit</tab>
            <label>Featured Product settings</label>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<genneral_setting>
					<label>Genneral setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Feature Product Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<jqueryinclude translate="label">
                            <label>Include Jquery Library</label>
                            <comment>Example:jquery-1.10.2.min.js(false for disable)</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jqueryinclude>
					</fields>
				</genneral_setting>
                <horizontal_carousels_setting translate="label">
                    <label>Horizontal carousels setting (CMS page, static block)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <title translate="label comment">
                            <label>Title </label>
                            <comment>Show your title here</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <product_no translate="label comment">
                            <label>Set number of featured products to show on</label>
                            <comment>Default: 20 (products).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_no>
						<slide_itemsonpage translate="label comment">
							<label>Show items number on one slide page</label>
                            <comment>Default: 4 products</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slide_itemsonpage>
						
						<slide_auto translate="label comment">
                            <label>Slide Auto</label>
							<comment>Default: Yes. Slides will automatically transition.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slide_auto>
						
						<slide_navigation translate="label comment">
                            <label>Show prev/next navigation</label>
							<comment>Default: Yes</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slide_navigation>
						
                    </fields>
                </horizontal_carousels_setting>
				<vertical_carousels_setting translate="label">
					<label>Vertical carousels setting (Left/Right sidebar)</label>
					<frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
					<fields>
                        <title translate="label comment">
                            <label>Title </label>
                            <comment>Show your title here</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <product_no translate="label comment">
                            <label>Set number of featured products to show on</label>
                            <comment>Default: 10 (products).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_no>
						
						<slide_auto translate="label comment">
                            <label>Slide Auto</label>
							<comment>Default: Yes. Slides will automatically transition</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slide_auto>
						
						<slide_navigation translate="label comment">
                            <label>Show prev/next navigation</label>
							<comment>Default: Yes</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </slide_navigation>
						
                    </fields>
					
				</vertical_carousels_setting>
            </groups>
        </isfeatured>	
    </sections>
</config>
